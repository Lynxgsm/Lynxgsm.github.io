---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import Input from "./Input.astro";

const { data, slug } = Astro.props as CollectionEntry<"blog">;
---

<div class="block p-4 border-2">
  <img
    alt={data.title}
    src={data.heroImage}
    class="h-64 w-full object-cover sm:h-80 lg:h-96 rounded-md"
  />

  <h3 class="mt-4 text-lg font-bold text-gray-900 sm:text-xl">
    {data.title}
  </h3>

  <p class="mt-2 max-w-sm text-gray-700">
    {data.description}
  </p>
  <a href={`/blog/${slug}`} class="mt-2 text-blue-500 block">Read more</a>
</div>
